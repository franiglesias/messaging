{
    "name": "milhojas/messaging",
    "description": "A Messaging component for apps, with CommandBus, EventBus and QueryBus",
    "type": "library",
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "^5.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "franiglesias",
            "email": "franiglesias@mac.com",
            "role": "Developer"
        }
    ],
    "config": {
        "bin-dir": "bin/"
    },
    "require": {
        "php": "^5.5 || ^7.0",
        "symfony/dependency-injection": "^3.2"
    },
    "autoload": {
        "psr-4": {
